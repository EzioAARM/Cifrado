<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:fontFamily">@font/robotoregular</item>
    </style>

    <style name="StyleCard">
        <item name="android:layout_margin">15dp</item>
        <item name="android:background">@drawable/border_radius</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">3</item>
    </style>

    <style name="StyleCardItem">
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">3</item>
    </style>

    <style name="StyleButton">
        <item name="android:background">@drawable/border_radius_button</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/robotobold</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

</resources>
